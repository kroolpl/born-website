---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const navItems = [
  { href: '/', text: 'Home' },
  { href: '/properties', text: 'Properties' },
  { href: '/about', text: 'About' },
  { href: '/blog', text: 'Blog' }
];
---

<header class="fixed w-full z-50" transition:persist transition:name="navbar">
  <div class="absolute inset-0">
    <div class="flex h-full">
      <div class="w-1/2 bg-white shadow-sm"></div>
      <div class="w-1/2 bg-[#FC431C] shadow-sm"></div>
    </div>
  </div>

  <nav class="container mx-auto px-6 relative">
    <Astronav closeOnClick>
      <div class="flex items-center justify-between h-16">
        <a href="/" class="flex items-center w-[140px]" transition:name="logo">
          <img 
            src="/images/g66.png" 
            alt="BORN Logo" 
            class="h-12 w-auto object-contain"
            width="140"
            height="48"
          />
        </a>

        <div class="block md:hidden">
          <MenuIcon class="w-6 h-6 text-[#FC431C]" />
        </div>

        <MenuItems class="hidden md:flex">
          <ul class="flex items-center gap-8">
            {navItems.map(item => (
              <li>
                <a 
                  href={item.href} 
                  class="text-[15px] text-white hover:text-white/80 transition-colors font-medium py-2"
                >
                  {item.text}
                </a>
              </li>
            ))}
            <li>
              <a 
                href="/contact" 
                class="bg-white text-[#FC431C] px-6 py-2.5 rounded-md text-[15px] font-medium hover:bg-white/90 transition-colors ml-4"
              >
                Skontaktuj się
              </a>
            </li>
          </ul>
        </MenuItems>
      </div>

      <MenuItems class="hidden md:hidden">
        <ul class="flex flex-col py-4 bg-[#FC431C]">
          {navItems.map(item => (
            <li>
              <a 
                href={item.href} 
                class="block text-white hover:bg-white/10 transition-colors px-6 py-3"
              >
                {item.text}
              </a>
            </li>
          ))}
          <li>
            <a 
              href="/contact" 
              class="block text-white hover:bg-white/10 transition-colors px-6 py-3"
            >
              Skontaktuj się →
            </a>
          </li>
        </ul>
      </MenuItems>
    </Astronav>
  </nav>
</header>