---
interface Props {
  title: string;
  location: string;
  price: string;
  image: string;
  beds: number;
  baths: number;
  sqft: number;
}

const { title, location, price, image, beds, baths, sqft } = Astro.props;
---

<div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow border border-primary-200">
  <img
    src={image}
    alt={title}
    class="w-full h-56 object-cover"
    transition:name={`property-image-${title}`}
  />
  <div class="p-6">
    <h3 class="font-display text-xl mb-2" transition:name={`property-title-${title}`}>{title}</h3>
    <p class="text-primary-600 mb-4">{location}</p>
    <div class="flex justify-between items-center mb-4">
      <span class="font-semibold text-xl">{price}</span>
      <div class="flex space-x-4 text-primary-600">
        <span>{beds} beds</span>
        <span>{baths} baths</span>
        <span>{sqft} sq ft</span>
      </div>
    </div>
    <a
      href={`/properties/${title.toLowerCase().replace(/\s+/g, '-')}`}
      class="block text-center bg-primary-900 text-white py-2.5 rounded-lg hover:bg-primary-800 transition-colors"
    >
      View Details
    </a>
  </div>
</div>