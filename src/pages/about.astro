---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';

const stats = [
  { value: '20+', label: 'Years Experience' },
  { value: '500+', label: 'Properties Built' },
  { value: '98%', label: 'Client Satisfaction' },
  { value: '15', label: 'Awards Won' },
];

const team = [
  {
    name: 'John Smith',
    role: 'Founder & CEO',
    image: 'https://images.unsplash.com/photo-1560250097-0b93528c311a?auto=format&q=75&fit=crop&w=300',
  },
  {
    name: 'Sarah Johnson',
    role: 'Head of Architecture',
    image: 'https://images.unsplash.com/photo-1573496799652-408c2ac9fe98?auto=format&q=75&fit=crop&w=300',
  },
  {
    name: 'Michael Brown',
    role: 'Construction Director',
    image: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?auto=format&q=75&fit=crop&w=300',
  },
];
---

<Layout title="About Us - BORN">
  <!-- Hero Section -->
  <section class="relative h-[70vh] flex items-center justify-center">
    <div class="absolute inset-0">
      <img
        src="/images/domy1.jpg"
        alt="BORN Headquarters"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    <div class="relative z-10 text-center text-white px-4 max-w-4xl mx-auto">
      <h1 class="font-display text-5xl md:text-7xl mb-6">About BORN</h1>
      <p class="text-xl md:text-2xl text-white/90">Building dreams into reality since 2003</p>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12">
        {stats.map(stat => (
          <div class="text-center">
            <div class="text-5xl font-display text-primary-900 mb-2">{stat.value}</div>
            <div class="text-primary-600 font-medium">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Story Section -->
  <section class="py-20 bg-[#f9f9f9]">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="font-display text-4xl md:text-5xl mb-8">Our Story</h2>
          <div class="space-y-6 text-lg text-primary-700">
            <p>
              Founded in 2003, BORN has grown from a small family business into one of the most respected property developers in the region. Our commitment to quality, innovation, and sustainability has earned us numerous awards and the trust of countless families.
            </p>
            <p>
              We believe that every home we build should reflect our core values: exceptional quality, thoughtful design, and sustainable living. Our team of experts works tirelessly to ensure that each property meets our high standards and exceeds our clients' expectations.
            </p>
          </div>
        </div>
        <div class="relative">
          <img
            src="https://images.unsplash.com/photo-1600585154526-990dced4db0d?auto=format&q=75&fit=crop"
            alt="Our Story"
            class="rounded-2xl shadow-2xl w-full aspect-[4/3] object-cover"
          />
          <div class="absolute -bottom-6 -left-6 bg-[#FC431C] text-white p-6 rounded-lg">
            <p class="text-3xl font-display">20+</p>
            <p class="text-sm">Years of Excellence</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="font-display text-4xl md:text-5xl mb-6">Meet Our Team</h2>
        <p class="text-lg text-primary-700 max-w-2xl mx-auto">
          Meet the passionate individuals who make BORN's vision a reality. Our team brings together decades of experience in property development, architecture, and construction.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        {team.map(member => (
          <div class="group relative">
            <div class="relative overflow-hidden rounded-2xl aspect-[3/4]">
              <img
                src={member.image}
                alt={member.name}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
                <h3 class="font-display text-2xl mb-1">{member.name}</h3>
                <p class="text-white/80">{member.role}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary-900 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="font-display text-4xl md:text-5xl mb-6">Ready to Build Your Dream Home?</h2>
      <p class="text-xl text-primary-300 mb-8 max-w-2xl mx-auto">
        Let's start a conversation about your vision and how we can bring it to life.
      </p>
      <a
        href="/contact"
        class="inline-block bg-white text-primary-900 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-primary-100 transition-colors"
      >
        Get in Touch
      </a>
    </div>
  </section>
</Layout>