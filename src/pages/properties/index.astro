---

<Layout title="Properties - BORN">
  <PageHeader
    title="Our Properties"
    subtitle="Discover your perfect home from our carefully curated collection"
    backgroundImage="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&q=75&fit=crop"
  />

  <section class="py-20 px-4">
    <div class="container mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {properties.map(property => (
          <PropertyCard {...property} />
        ))}
      </div>
    </div>
  </section>
</Layout>