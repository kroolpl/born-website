    beds: 3,
    baths: 2,
    sqft: 1800,
  },
  {
    title: 'Garden Townhouse',
    location: 'Green Valley',
    price: '£650,000',
    image: 'https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?auto=format&q=75&fit=crop&w=600',
    beds: 4,
    baths: 2.5,
    sqft: 2200,
  },
  {
    title: 'Penthouse Suite',
    location: 'Downtown',
    price: '£950,000',
    image: 'https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?auto=format&q=75&fit=crop&w=600',
    beds: 3,
