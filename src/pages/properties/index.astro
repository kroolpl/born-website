---
import Layout from '../../layouts/Layout.astro';
import { properties } from '../../data/properties';
---

<Layout title="Properties - BORN">
  <section class="py-20 px-4">
    <div class="container mx-auto">
      <h1 class="font-display text-4xl md:text-5xl mb-12 text-center">Our Properties</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {properties.map(property => (
          <a href={`/properties/${property.slug}`} class="block">
            <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
              <img
                src={property.image}
                alt={property.title}
                class="w-full h-48 object-cover"
              />
              <div class="p-6">
                <h2 class="font-display text-xl mb-2">{property.title}</h2>
                <p class="text-primary-600 mb-4">{property.location}</p>
                <p class="text-2xl font-bold">{property.price}</p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>